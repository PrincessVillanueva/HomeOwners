@model HomeOwners.Models.Authentication.SignUpViewModel
@{
    ViewData["Title"] = "Sign-In";
}

<div class="h-full w-full bg-gray-100 flex flex-row justify-center items-center">
    <div class="sm:w-full md:w-[300px]">
        <form method="post" class="flex flex-col gap-4">
            <div class="flex flex-col">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="border-b-2" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="border-b-2" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="MidInitial"></label>
                <input asp-for="MidInitial" class="border-b-2" />
                <span asp-validation-for="MidInitial"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="border-b-2" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="border-b-2" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="border-b-2" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="">
                <button type="submit" class="w-full bg-green-400 text-white py-2 rounded">Register</button>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
