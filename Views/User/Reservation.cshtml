                <div class="bg-white rounded-xl shadow-md sticky top-6 p-6">
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-2xl font-bold">$350</span>
                        <span class="text-gray-500">per night</span>
                    </div>

                    <!-- Date Picker -->
                    <div class="mb-4">
                        <label class="block text-gray-700 font-medium mb-2">Select dates</label>
                        <div class="grid grid-cols-2 gap-2">
                            <input type="text" placeholder="Check-in" class="border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
