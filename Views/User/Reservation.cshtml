            <div class="property-carousel flex overflow-x-auto snap-x snap-mandatory hide-scrollbar">
                <div class="property-carousel-item flex-shrink-0 w-full h-96">
                    <img src="~/image/reservation.png" alt="Mirror House exterior" class="w-full h-full object-cover">
                </div>
                <div class="property-carousel-item flex-shrink-0 w-full h-96">
                    <img src="~/image/reservation1.png" alt="Mirror House interior" class="w-full h-full object-cover">
                </div>
                <!-- Add more images as needed -->
            </div>
            <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
                <button class="w-3 h-3 rounded-full bg-white bg-opacity-70"></button>
                <button class="w-3 h-3 rounded-full bg-white bg-opacity-30"></button>
            </div>
            <button class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-white bg-opacity-80 rounded-full p-2 shadow-md hover:bg-opacity-100 transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
